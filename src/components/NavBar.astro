---
const links = [
    { href: '#home', text: 'Home' },
    { href: '#projects', text: 'Projects' },
    { href: '#contact', text: 'Contact' }
];
---

<nav>
    <div>
        {links.map(link => (
            <a href={link.href}>{link.text}</a>
        ))}
    </div>
</nav>

<style>
    nav {
        top: 5vh;
        position: fixed;
        width: 50vw;
        background-color: rgba(20, 20, 20, 0.5);
        border-radius: 90pt;
        padding: 0.3rem;
        -webkit-backdrop-filter: blur(7px);
        backdrop-filter: blur(7px);
        z-index: 100;
        box-shadow: inset 0 0 15px 0 rgba(53, 53, 53, 0.5);
        @media (max-width: 600px) {
            width: 90%;
        }
        @media (max-width: 1200px) {
            width: 80vw;
        }
        @media (min-width: 1000px) and (max-width: 1920px) {
            width: clamp(420px, 38vw, 700px);
            top: 4vh;
            padding: 0.25rem 0.5rem;
        }
    }
    div {
        display: flex;
        justify-content: space-around;
        align-items: center;
    }
    a {
        color: rgb(216, 216, 216);
        text-decoration: none;
        margin: 0.5vh 1vw;
        position: relative;
        @media (min-width: 1000px) and (max-width: 1920px) {
            font-size: 28px;
            margin: 0.3vh 0.8vw;
        }
    }
    a::after {
        content: '';
        display: block;
        position: absolute;
        height: 4px;
        width: 100%;
        transform: scaleX(0);
        transition: transform 0.3s;
        background: rgb(216, 216, 216);
        bottom: 4px;
    }
    a:hover::after {
        transform: scaleX(1);
    }
</style>